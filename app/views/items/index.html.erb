<h1>Listing items</h1>

<table>
  <tr>
    <th>Id</th>
    <th>First</th>
    <th>Content</th>
    <th>Version</th>
    <th>Deleted</th>
  </tr>

<% for item in @items %>
  <tr>
    <td><%=h item.id%></td>
    <td><%=h item.first_id%></td>
    <td><%=h truncate( item.content ) %></td>
    <td><%=h item.version %></td>
    <td><%=h item.deleted %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

